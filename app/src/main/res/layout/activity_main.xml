<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F6F7FB"
    tools:context=".MainActivity">

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Online Giyim Mağazası"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:gravity="center"
        android:padding="12dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Form Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ürün -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ürün Türü"
                android:textStyle="bold"
                android:textColor="#374151"/>

            <Spinner
                android:id="@+id/spProduct"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"/>

            <!-- Renk -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renk"
                android:textStyle="bold"
                android:textColor="#374151"/>

            <Spinner
                android:id="@+id/spColor"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"/>

            <!-- Beden -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beden"
                android:textStyle="bold"
                android:textColor="#374151"/>

            <Spinner
                android:id="@+id/spSize"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"/>

            <!-- Adet -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adet"
                android:textStyle="bold"
                android:textColor="#374151"/>

            <Spinner
                android:id="@+id/spQty"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"/>

            <!-- Fiyatlar -->
            <TextView
                android:id="@+id/tvUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birim Fiyat: 0 TL"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#DC2626"
                android:paddingTop="6dp"/>

            <TextView
                android:id="@+id/tvLineTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Satır Toplam: 0 TL"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"/>

            <!-- Butonlar -->
            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SEPETE EKLE"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2563EB"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnGoCart"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SEPETE GİT"
                android:textStyle="bold"
                android:textColor="#111827"
                android:backgroundTint="#E5E7EB"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnClearCart"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SEPETİ TEMİZLE"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#DC2626"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Alt bilgi -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Not: Sepete ekledikten sonra Sepete Git ile ürünleri onaylayabilirsin."
        android:textSize="12sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
